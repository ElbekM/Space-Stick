<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customColorsView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="55dp"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="100dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/customColorTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:text="@string/scr_rgb_settings_lbl_custom_colors"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/customColorsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customColorTitleTextView"
                android:layout_margin="16dp"
                tools:itemCount="3" />

            <TextView
                android:id="@+id/addColorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customColorTitleTextView"
                android:gravity="center"
                android:text="@string/scr_rgb_settings_lbl_own_colors"
                android:textColor="@color/text_gray"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addNewColorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customColorsRecyclerView"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:text="@string/scr_rgb_settings_lbl_new_color" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
